<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="-55dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    app:cardUseCompatPadding="true"
    android:background="@null">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:padding="0dp"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/restaurant_button"
            android:layout_width="366dp"
            android:layout_height="159dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            app:srcCompat="@drawable/button_red"/>

        <TextView
            android:id="@+id/restaurant_name"
            android:layout_width="176dp"
            android:layout_height="53dp"
            android:layout_alignStart="@+id/restaurant_button"
            android:layout_alignTop="@+id/restaurant_button"
            android:layout_alignEnd="@+id/restaurant_button"
            android:layout_alignBottom="@+id/restaurant_button"
            android:layout_marginStart="95dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="139dp"
            android:layout_marginBottom="86dp"
            android:layout_toEndOf="@+id/food_icon"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:maxLines="4"
            android:singleLine="false"
            android:text="RESTAURANT \nNAME"
            android:textColor="@color/fontColour"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inspection_date"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/restaurant_button"
            android:layout_alignTop="@+id/restaurant_button"
            android:layout_alignEnd="@+id/restaurant_button"
            android:layout_alignBottom="@+id/restaurant_button"
            android:layout_marginStart="81dp"
            android:layout_marginTop="107dp"
            android:layout_marginEnd="124dp"
            android:layout_marginBottom="52dp"
            android:gravity="center"
            android:text="Date HERE"
            android:textColor="@color/fontColour" />

        <TextView
            android:id="@+id/num_issues"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_alignStart="@+id/restaurant_button"
            android:layout_alignTop="@+id/restaurant_button"
            android:layout_alignEnd="@+id/restaurant_button"
            android:layout_alignBottom="@+id/restaurant_button"
            android:layout_marginStart="258dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="64dp"
            android:gravity="center"
            android:text="10"
            android:textSize="40sp"
            android:textColor="@color/fontColour" />

        <TextView
            android:id="@+id/issues"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/restaurant_button"
            android:layout_alignTop="@+id/restaurant_button"
            android:layout_alignEnd="@+id/restaurant_button"
            android:layout_alignBottom="@+id/restaurant_button"
            android:layout_marginStart="261dp"
            android:layout_marginTop="107dp"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="52dp"
            android:gravity="center"
            android:text="Issues"
            android:textColor="@color/fontColour" />

        <ImageView
            android:id="@+id/food_icon"
            android:layout_width="38dp"
            android:layout_height="25dp"
            android:layout_alignStart="@+id/restaurant_button"
            android:layout_alignTop="@+id/restaurant_button"
            android:layout_alignEnd="@+id/restaurant_button"
            android:layout_alignBottom="@+id/restaurant_button"
            android:layout_marginStart="46dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="327dp"
            android:layout_marginBottom="79dp"
            android:gravity="center"
            app:srcCompat="@drawable/food_icon" />

        <ImageView
            android:id="@+id/haz_icon"
            android:layout_width="19dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="300dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="91dp"
            android:layout_marginBottom="123dp"
            app:srcCompat="@drawable/restlist_high" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>